<h2>Update {{title}}</h2>

<form action="/movie/{{_id}}/edit-url" method="post">
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input required maxlength="250" type="text" class="form-control" name="title" value="{{title}}">
  </div>
  <div class="mb-3">
    <label for="genre" class="form-label">Genre</label>
    <input required type="text" class="form-control" name="genre" value="{{genre}}">
  </div>
  <div class="mb-3">
    <label for="plot" class="form-label">Plot</label>
    <input type="text" class="form-control" name="plot" value="{{plot}}">
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>