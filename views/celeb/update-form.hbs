<h2>Update {{name}}</h2>

<form action="/celeb/{{_id}}/edit" method="post">
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input required maxlength="250" type="text" class="form-control" name="name" value="{{name}}">
  </div>
  <div class="mb-3">
    <label for="occupation" class="form-label">Occupation</label>
    <input required type="text" class="form-control" name="occupation" value="{{occupation}}">
  </div>
  <div class="mb-3">
    <label for="catchPhrase" class="form-label">Catchphrase</label>
    <input type="text" class="form-control" name="catchPhrase" value="{{catchphrase}}">
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>