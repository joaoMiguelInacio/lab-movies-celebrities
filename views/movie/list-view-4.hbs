<h2>Movies</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="align-middle" scope="col">Title</th>
      <th class="align-middle" scope="col">Genre</th>
      <th class="align-middle" scope="col">Rating</th>
      <th scope="col">
        <div class="dropdown">
          <button class="dropbtn">Sort &#x21e9</button>
            <div class="dropdown-content">
              <li><a class="dropdown-item" href="/movie/list-url">Title</a></li>
              <li><a class="dropdown-item" href="/movie/list-url-3">Genre</a></li>
              <li><a class="dropdown-item" href="/movie/list-url-2">Rating</a></li>
            </div>
        </div>
      </th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  {{#each movies}}
    <tr scope="row">
      <td class="align-middle">{{this.title}}</td>
      <td class="align-middle">{{this.genre}}</td>
      <td class="align-middle">{{this.rating}}</td>
      <td></td>
      <td>
        <a class="btn btn-info" href="/movie/{{this._id}}/details-url">Details</a>
      </td>
      <td><a href="/movie/{{this._id}}/create-review-url" class = "btn btn-primary">Review</a></td>
      <td>
        <a class="btn btn-secondary" href="/movie/{{this._id}}/edit-url">Edit</a>
      </td>
      <td>
          <form action="/movie/{{this._id}}/delete-url" method="post">
              <button type="submit" class="btn btn-danger">Delete</button>
          </form>
      </td>
    </tr>
    {{/each}}
    <tr>
      <td>
        <form action="/movie/create-url" method="get">
          <button type="submit" class="btn btn-primary">Add a Movie</button>
        </form>
      </td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
</table>