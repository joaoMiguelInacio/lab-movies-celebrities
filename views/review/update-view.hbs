<h2>Update {{name}}</h2>

<form action="/review/{{_id}}/edit-url" method="post">
  <div class="mb-3">
    <label for="content" class="form-label">Content</label>
    <input required maxlength="250" type="text" class="form-control" name="content" value="{{content}}">
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>